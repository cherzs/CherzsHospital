<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_room_tree" model="ir.ui.view">
            <field name="name">Room Tree</field>
            <field name="model">hospital.room</field>
            <field name="arch" type="xml">
                <tree string="Rooms">
                    <field name="name"/>
                    <field name="room_number"/>
                    <field name="room_type"/>
                    <field name="capacity"/>
                    <field name="is_available"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_room_form" model="ir.ui.view">
            <field name="name">Room Form</field>
            <field name="model">hospital.room</field>
            <field name="arch" type="xml">
                <form string="Room">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="room_number"/>
                            <field name="room_type"/>
                            <field name="capacity"/>
                            <field name="is_available"/>
                        </group>
                        <notebook>
                            <page string="Patients">
                                <field name="patient_id">
                                    <tree string="Patients">
                                        <field name="name"/>
                                        <field name="age"/>
                                        <field name="gender"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_room" model="ir.actions.act_window">
            <field name="name">Rooms</field>
            <field name="res_model">hospital.room</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo> 