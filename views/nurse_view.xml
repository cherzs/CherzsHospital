<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_nurse_tree" model="ir.ui.view">
            <field name="name">Nurse Tree</field>
            <field name="model">hospital.nurse</field>
            <field name="arch" type="xml">
                <tree string="Nurses">
                    <field name="name"/>
                    <field name="nurse_id"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="department"/>
                    <field name="shift"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_nurse_form" model="ir.ui.view">
            <field name="name">Nurse Form</field>
            <field name="model">hospital.nurse</field>
            <field name="arch" type="xml">
                <form string="Nurse">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="nurse_id"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="department"/>
                            <field name="shift"/>
                        </group>
                        <notebook>
                            <page string="Patients">
                                <field name="patient_id">
                                    <tree string="Patients">
                                        <field name="name"/>
                                        <field name="age"/>
                                        <field name="gender"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_nurse" model="ir.actions.act_window">
            <field name="name">Nurses</field>
            <field name="res_model">hospital.nurse</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo> 