<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_appointment_tree" model="ir.ui.view">
            <field name="name">Appointment Tree</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <tree string="Appointments" multi_edit="1" sample="1" decoration-danger="state=='cancel'" decoration-success="state=='done'" decoration-info="state=='draft'">
                    <field name="reference" readonly="1"/>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <field name="appointment_datetime"/>
                    <field name="priority" widget="priority" optional="show"/>
                    <field name="state" decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-warning="state == 'confirm'" decoration-danger="state == 'cancel'" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_appointment_form" model="ir.ui.view">
            <field name="name">Appointment Form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <form string="Appointment">
                    <header>
                        <button name="action_confirm" 
                                string="Confirm" 
                                class="oe_highlight" 
                                type="object" 
                                invisible="state != 'draft'"/>
                        <button name="action_done" 
                                string="Mark as Done" 
                                class="oe_highlight" 
                                type="object" 
                                invisible="state != 'confirm'"/>
                        <button name="action_cancel" 
                                string="Cancel" 
                                type="object" 
                                invisible="state not in ('draft','confirm')"/>
                        <button name="action_draft" 
                                string="Reset to Draft" 
                                type="object" 
                                invisible="state != 'cancel'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="reference" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="patient_id" required="1"/>
                                <field name="doctor_id" required="1"/>
                                <field name="priority" widget="priority"/>
                            </group>
                            <group>
                                <field name="appointment_datetime" required="1"/>
                                <field name="booking_date" readonly="1"/>
                                <field name="description"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Medical Notes" name="medical_notes">
                                <field name="medical_notes" placeholder="Add medical notes here..."/>
                            </page>
                            <page string="Other Information" name="other_info">
                                <group>
                                    <group>
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <field name="create_uid" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_appointment_kanban" model="ir.ui.view">
            <field name="name">Appointment Kanban</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column" sample="1" records_draggable="1">
                    <field name="id"/>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <field name="appointment_datetime"/>
                    <field name="state"/>
                    <field name="priority"/>
                    <field name="reference"/>
                    <field name="color"/>
                    <progressbar field="state" colors='{"draft": "success", "confirm": "warning", "done": "success", "cancel": "danger"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click oe_kanban_card">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="reference"/>
                                        </strong>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a role="button" class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <t t-if="widget.editable">
                                                <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            </t>
                                            <t t-if="widget.deletable">
                                                <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Patient: </strong>
                                            <field name="patient_id"/>
                                        </div>
                                        <div class="col-6">
                                            <strong>Doctor: </strong>
                                            <field name="doctor_id"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <strong>Date: </strong>
                                            <field name="appointment_datetime"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2" t-if="record.description.raw_value">
                                        <div class="col-12">
                                            <field name="description"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="label_selection" 
                                               options="{'classes': {
                                                   'draft': 'bg-info',
                                                   'confirm': 'bg-warning',
                                                   'done': 'bg-success',
                                                   'cancel': 'bg-danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Kemudian referensikan view dalam action -->
        <record id="action_appointment" model="ir.actions.act_window">
            <field name="name">Appointment</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_appointment_kanban"/>
        </record>
    </data>
</odoo>