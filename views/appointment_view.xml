<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
       <record id="view_appointment_tree" model="ir.ui.view">
            <field name="name">Appointment Tree</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <tree string="Appointment">
                    <field name="patient_id" />
                    <field name="doctor_id" />
                    <field name="appointment_datetime" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <record id="view_appointment_form" model="ir.ui.view">
            <field name="name">Appointment Form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <form string="Appointment">
                    <sheet>
                        <group>
                            <group>
                                <field name="patient_id"/>
                                <field name="doctor_id"/>
                            </group>
                            <group>
                                <field name="appointment_datetime"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_appointment_kanban" model="ir.ui.view">
            <field name="name">Appointment Kanban</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <field name="appointment_datetime"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="patient_id"/>
                                    </strong>
                                    <div>
                                        Doctor: <field name="doctor_id"/>
                                    </div>
                                    <div>
                                        Date: <field name="appointment_datetime"/>
                                    </div>
                                    <div>
                                        <field name="description"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Kemudian referensikan view dalam action -->
        <record id="action_appointment" model="ir.actions.act_window">
            <field name="name">Appointment</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_appointment_tree"/>
        </record>
    </data>
</odoo>